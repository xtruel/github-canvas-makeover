# CMS Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Secrets (CHANGE THESE IN PRODUCTION!)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
TOKEN_SECRET=your-super-secret-token-key-change-this-in-production

# Site Configuration
SITE_BASE_URL=http://localhost:3000
SITE_NAME=GitHub Canvas Makeover CMS
SITE_DESCRIPTION=Self-hosted CMS for media and article management

# Database Configuration
DB_PATH=./data/cms.db

# Upload Configuration
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=50
ALLOWED_MEDIA_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm

# Image Processing Configuration
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080
THUMBNAIL_SIZE=300
WEBP_QUALITY=80
JPEG_QUALITY=85

# Rate Limiting Configuration
LOGIN_RATE_LIMIT=5
WRITE_RATE_LIMIT=100
SEARCH_RATE_LIMIT=50
API_RATE_LIMIT=100

# Scheduling Configuration
PUBLISH_POLL_INTERVAL=30000

# Backup Configuration
BACKUP_DIR=./backups
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change-this-password

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=

# External Services (Optional)
YOUTUBE_API_KEY=

# Debug Configuration
DEBUG_MODE=true
LOG_LEVEL=info